rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================================
    // USERS COLLECTION
    // ============================================================
    match /users/{userId} {
      // Users can read their own data and admins can read all
      allow read: if request.auth != null && 
                    (request.auth.uid == userId || isAdmin());
      
      // Users can write their own data
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // Admin can write any user data
      allow write: if isAdmin();
    }

    // ============================================================
    // STUDENTS COLLECTION (for student app)
    // ============================================================
    match /students/{studentId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == studentId;
      allow write: if isAdmin();
    }

    // ============================================================
    // MEALS COLLECTION (NESTED STRUCTURE)
    // Path: Meals/{messType}/categories/{category}/subcategories/{subcategory}/items/{mealId}
    // ============================================================
    
    // Allow reading all meals for authenticated users
    match /Meals/{messType}/categories/{category}/subcategories/{subcategory}/items/{mealId} {
      allow read: if request.auth != null;
      
      // Only admins can create, update, or delete meals
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Allow listing all documents in the path
    match /Meals/{document=**} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // ============================================================
    // MEAL SELECTIONS COLLECTION
    // ============================================================
    match /selections/{selectionId} {
      // Any authenticated user can read selections
      allow read: if request.auth != null;
      
      // Users can create and update their own selections
      allow create: if request.auth != null;
      allow update: if request.auth != null && 
                      request.resource.data.userId == request.auth.uid;
      
      // Users can delete their own selections
      allow delete: if request.auth != null && 
                      resource.data.userId == request.auth.uid;
      
      // Admins can do everything
      allow write: if isAdmin();
    }

    // ============================================================
    // FEEDBACK COLLECTION
    // ============================================================
    match /feedback/{feedbackId} {
      // Admins can read all feedback
      allow read: if isAdmin();
      
      // Users can read their own feedback
      allow read: if request.auth != null && 
                    resource.data.userId == request.auth.uid;
      
      // Anyone can create feedback (authenticated only)
      allow create: if request.auth != null;
      
      // Users can update/delete their own feedback
      allow update, delete: if request.auth != null && 
                              resource.data.userId == request.auth.uid;
      
      // Admins can do everything
      allow write: if isAdmin();
    }

    // ============================================================
    // NOTIFICATIONS COLLECTION
    // ============================================================
    match /notifications/{notificationId} {
      // Users can read their own notifications
      allow read: if request.auth != null && 
                    resource.data.userId == request.auth.uid;
      
      // Admins can read all notifications
      allow read: if isAdmin();
      
      // Only admins can create notifications
      allow create: if isAdmin();
      
      // Users can update their own notifications (mark as read, etc.)
      allow update: if request.auth != null && 
                      resource.data.userId == request.auth.uid;
      
      // Only admins can delete notifications
      allow delete: if isAdmin();
    }

    // ============================================================
    // ANALYTICS COLLECTION (Admin only)
    // ============================================================
    match /analytics/{document=**} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    // ============================================================
    // ADMIN USERS COLLECTION
    // ============================================================
    match /adminUsers/{adminId} {
      // Only admins can read admin list
      allow read: if isAdmin();
      
      // Allow self-registration or existing admins to create
      allow create: if isAdmin() || (request.auth != null && request.auth.uid == adminId);
      
      // Admins can update their own data
      allow update: if request.auth != null && request.auth.uid == adminId;
      
      // Only admins can delete admin accounts
      allow delete: if isAdmin();
    }

    // ============================================================
    // PREFERENCES COLLECTION
    // ============================================================
    match /preferences/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
      allow read, write: if isAdmin();
    }

    // ============================================================
    // ORDERS/BOOKINGS COLLECTION (if you add payment features)
    // ============================================================
    match /orders/{orderId} {
      // Users can read their own orders
      allow read: if request.auth != null && 
                    resource.data.userId == request.auth.uid;
      
      // Admins can read all orders
      allow read: if isAdmin();
      
      // Users can create their own orders
      allow create: if request.auth != null;
      
      // Only admins can update/delete orders
      allow update, delete: if isAdmin();
    }

    // ============================================================
    // HELPER FUNCTIONS
    // ============================================================
    
    // Check if user is an admin
    function isAdmin() {
      // Method 1: Check if user has admin custom claim (requires setting custom claims)
      // return request.auth.token.admin == true;
      
      // Method 2: Check if user exists in adminUsers collection
      // This is simpler for initial setup
      return request.auth != null && 
             exists(/databases/$(database)/documents/adminUsers/$(request.auth.uid));
    }
    
    // Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Check if user owns the document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
  }
}
